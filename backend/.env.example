# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here
DATABASE_URL=postgres://postgres:postgres@your-project-ref.supabase.co:5432/postgres

# API Gateway Settings
ENABLE_API_AUTH=true
ENABLE_RATE_LIMITING=true
API_KEY_HEADER=X-API-Key
DEFAULT_RATE_LIMIT=60
AUTH_EXCLUDE_PATHS=/docs,/redoc,/openapi.json,/health,/auth,/api/v1/auth
RATE_LIMIT_EXCLUDE_PATHS=/health,/auth/login
API_KEYS={"key1":{"role":"admin","name":"Admin Key"},"key2":{"role":"user","name":"User Key"}}

# Integration Webhooks
MAKE_WEBHOOK_TASK_CREATED=https://hook.make.com/your-task-created-webhook
MAKE_WEBHOOK_TASK_BLOCKED=https://hook.make.com/your-task-blocked-webhook
MAKE_WEBHOOK_EOD_REMINDER=https://hook.make.com/your-eod-reminder-webhook
MAKE_WEBHOOK_MASTERY_REMINDER=https://hook.make.com/your-mastery-reminder-webhook

# External API Tokens
# Slack Direct Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_DEFAULT_CHANNEL=#general
SLACK_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
SLACK_CIRCUIT_BREAKER_TIMEOUT=60

# GitHub Integration
GITHUB_TOKEN=your-github-token-here
AI_SERVICE_KEY=your-ai-service-key-here

# Direct Webhook Integration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here

# OpenAI Integration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4.1-2025-04-14
DOCUMENTATION_OPENAI_MODEL=gpt-4-turbo-preview
DOC_AGENT_OPENAI_MODEL=gpt-4-turbo-preview
COMMIT_ANALYSIS_MODEL=o4-mini-2025-04-16
CODE_QUALITY_MODEL=o4-mini-2025-04-16

# Documentation Features
DOCS_REPOSITORY=owner/docs-repo
ENABLE_DOCS_UPDATES=true

# Circuit Breaker Settings
GITHUB_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
GITHUB_CIRCUIT_BREAKER_TIMEOUT=60
OPENAI_CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
OPENAI_CIRCUIT_BREAKER_TIMEOUT=30

# Rate Limiting
GITHUB_API_RATE_LIMIT=5000
OPENAI_API_RATE_LIMIT=3500

# Frontend URL for notifications
FRONTEND_URL=http://localhost:8080 