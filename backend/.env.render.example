# Render.com Backend Environment Variables
# Copy these to your Render backend service environment settings
# Service name: brain-api (or your backend service name)

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password_here@your_db_host.oregon-postgres.render.com/your_db_name
# Example: postgresql://postgres:abc123xyz@dpg-abc123xyz-a.oregon-postgres.render.com/golfdaddy_brain

# Supabase Configuration (Authentication)
SUPABASE_URL=https://your_project_id.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Environment Settings
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS Configuration - CRITICAL FOR AUTHENTICATION
# Replace with your actual frontend URL from Render
CORS_ALLOWED_ORIGINS=https://brain-frontend-wc3t.onrender.com,http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Security
SECRET_KEY=generate_a_secure_random_string_here
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# API Configuration
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["https://brain-frontend-wc3t.onrender.com"]

# Optional: Slack Integration
SLACK_BOT_TOKEN=xoxb-your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_DEFAULT_CHANNEL=engineering

# Optional: GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# Optional: Make.com Integration
MAKE_INTEGRATION_API_KEY=your_make_api_key_here

# Rate Limiting
ENABLE_RATE_LIMITING=true
DEFAULT_RATE_LIMIT=60
RATE_LIMIT_EXCLUDE_PATHS=/docs,/redoc,/openapi.json,/api/v1/health

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Worker Configuration
BACKGROUND_TASK_WORKERS=2
TASK_QUEUE_MAX_SIZE=100

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
ENABLE_CACHE=true

# IMPORTANT NOTES:
# 1. Database URL: Get this from your Render PostgreSQL database dashboard
# 2. Frontend URL: Must match exactly with your deployed frontend URL
# 3. All secret keys should be generated securely, never reuse example values
# 4. Supabase keys: Get from your Supabase project settings > API
# 5. After adding these, click "Save Changes" and wait for redeploy